  input#start(type="radio", name="start", required)
  label#label-start(for="start") START

  input#stand(type="radio")
  label#label-stand(for="stand") STAND

  input#hit-e(type="radio")
  label.label-hit(for="hit-e") HIT

  input#hit-d(type="radio")
  label.label-hit(for="hit-d") HIT

  input#hit-c(type="radio")
  label.label-hit(for="hit-c") HIT

